---
import { Icon } from 'astro-icon';

const baseURL = import.meta.env.BASE_URL;
---

<a
	href={baseURL}
	aria-label="Home page"
	title="Home page"
	class="rounded-full bg-gold p-1 hover:bg-white"
>
	<Icon name="logo" class="h-10 w-10 lg:h-14 lg:w-14" aria-hidden="true" />
	<span class="sr-only">Accueil</span>
</a>
