---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
	label: string;
	css?: string;
}

const { href, label, css = 'border-white text-lg lg:text-xl', ...props } = Astro.props;

// Active Link
const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, '');
---

<a
	href={href}
	class:list={[css, 'hover:border-b', { 'border-b': isActive }]}
	{...props}
	aria-label={`Ouvrir la page ${label}`}
	title={`Ouvrir la page ${label}`}
>
	{label}
</a>
