---
import { Image } from 'astro:assets';

import CTALink from '@components/links/CTALink.astro';
import heroImg from '../../assets/hero.jpg';

const baseURL = import.meta.env.BASE_URL;
const subscribe = `${baseURL}/ecole`;
const courses = `${baseURL}/cours`;
---

<section class="relative h-[640px] overflow-hidden">
	<div class="grid h-full items-center bg-opacity-50 bg-gradient-to-r from-black p-16">
		<div class="flex w-1/3 flex-col gap-8">
			<h1>École <br />Dragon Tigre</h1>
			<p class="text-xl">
				École de Kung-Fu Wushu traditionnel depuis plus de 20 ans à La Rochelle. Venez découvrir nos
				différents cours, le <em>cours d'essai est gratuit</em> et l'<em
					>inscription est possible toute l'année</em
				>.
			</p>
			<div class="flex gap-8">
				<CTALink label="S'inscrire" href={subscribe} />
				<CTALink outline={true} label="Voir nos cours" href={courses} />
			</div>
		</div>
	</div>

	<Image
		src={heroImg}
		alt="Cours de Tai-Chi dans l'école Dragon Tigre"
		class="absolute inset-0 -z-10 h-full object-cover"
		loading="eager"
	/>
</section>
<style is:global>
	em {
		font-weight: bold;
		font-style: normal;
	}
</style>
