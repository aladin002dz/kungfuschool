---
import { Icon } from 'astro-icon';
export interface Props {
	title1: string;
	title2: string;
	description: string;
	icon: string;
}

const { title1, title2, description, icon } = Astro.props;
---

<a
	class="flex flex-col gap-8 border border-white bg-white fill-black p-16 text-black hover:bg-black hover:fill-white hover:text-white"
	href="/"
>
	<div class="w-30 h-52 overflow-hidden">
		<Icon name={icon} class="h-full w-full" />
	</div>
	<div>
		<h2 class="mb-4 text-center">{title1} <br />{title2}</h2>
		<p class="text-lg">{description}</p>
	</div>
</a>
